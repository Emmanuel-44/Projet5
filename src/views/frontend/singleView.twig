{% extends "frontend/layout.twig" %}

{% block css %}
<!-- ====== ALL CSS ====== -->
<link rel="stylesheet" href="../public/assets/css/bootstrap.min.css">
<link rel="stylesheet" href="../public/assets/css/fontawesome-all.min.css">
<link rel="stylesheet" href="../public/assets/css/lightbox.min.css">
<link rel="stylesheet" href="../public/assets/css/owl.carousel.min.css">
<link rel="stylesheet" href="../public/assets/css/animate.css">
<link rel="stylesheet" href="../public/css/style.css">
<link rel="stylesheet" href="../public/assets/css/responsive.css">
{% endblock %}

{% block logo %}
<!-- Logo -->
<a class="navbar-brand logo" href="index.html">
    <img src="../public/assets/images/logo.png" alt="logo">
</a>
<!-- // Logo -->
{% endblock %}

{% block image %}
<!-- Page Title -->
<div class="page-title bg-img section-padding bg-overlay" style="background-image: url(../public/assets/images/breadcrumb.jpg)">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <h2>Catégorie</h2>
            </div>
        </div>
    </div>
</div>
<!-- // Page Title -->
{% endblock %}

{% block content %}
    <section class="blog-section">
        <div class="container">
            <div class="row justify-content-center">
                <!-- Blog Main Content -->
                <div class="col-lg-8">
                    <div class="blog-post">
                        <img src="../{{ post.imagePath }}" alt="" class="blog-img">
                        <h4 class="blog-title"><a href="#">{{ post.title }}</a></h4>
                        <p class="blog-meta"><a class="user-name" href="#">De {{ post.author }}</a><span class="blog-date">Publié le {{ post.addingDate | date("d/m/Y") }}</span><a href="#" class="blog-comment">Comments (05)</a></p>
                        <div class="blog-main-content">
                            <p><strong>{{ post.teaser }}</strong></p>
                            <div style="margin-top: 20px;"><p>{{ post.content }}</p></div>
                        </div>

                        <!--  Blog Author -->
                        <div class="blog-author">
                            <div class="user-img" style="background-image: url(../public/assets/images/team/img-1.jpg)"></div>
                            <div class="user-content">
                                <h2>{{ post.author }} <span>Graphic designer</span></h2>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Necessitatibus, voluptas hic animi officiis corrupti velit commodi sed tempora reprehenderit.</p>
                                <!-- Social Area -->
                                <div class="social-aria text-left">
                                    <a target="_blank" href="#"><i class="fab fa-facebook-f"></i></a>
                                    <a target="_blank" href="#"><i class="fab fa-twitter"></i></a>
                                    <a target="_blank" href="#"><i class="fab fa-instagram"></i></a>
                                    <a target="_blank" href="#"><i class="fab fa-pinterest"></i></a>
                                    <a target="_blank" href="#"><i class="fab fa-youtube"></i></a>
                                </div>
                                <!-- // Social Area -->
                            </div>
                        </div>
                        <!-- // Blog Author -->

                        <!-- Blog Comments -->
                        <div class="blog-comment">
                            <h3>Comments (05)</h3>
                            <ol class="main-comment">
                                {% for comment in comments %}
                                <li class="single-comment">
                                    <!-- Comment Content -->
                                    <div class="comment">
                                        <div>
                                            <h4>{{ comment.username }}</h4>
                                            <p class="comment-date">{{ comment.commentDate | date('d/m/Y') }}</p>
                                            <p>{{ comment.content }}</p>
                                        </div>
                                    </div>
                                    <!-- // Comment Content -->
                                </li>
                                {% endfor %}
                            </ol>

                            <!-- Blog Comment Form -->
                            <div class="blog-comment-form">
                                <form action="" method="post">
                                {% if comment is defined and comment.errors is empty %}
                                    <div class="alert alert-success" role="alert">
                                        Votre commentaire a été ajouté !
                                    </div>
                                {% endif %}
                                {% if constant('models\\Comment::INVALID_USERNAME') in comment.errors %}
                                    <div class="alert alert-danger" role="alert">
                                        Vous devez ajouter un Pseudo !
                                    </div>
                                {% endif %}
                                    <div class="col-lg-12" style="padding-right:0px; padding-left:0px;">
                                        <p><input type="text" name="username" placeholder="Pseudo" required></p>
                                    </div>
                                    {% if constant('models\\Comment::INVALID_CONTENT') in comment.errors %}
                                    <div class="alert alert-danger" role="alert">
                                        Vous devez ajouter un commentaire !
                                    </div>
                                    {% endif %}
                                    <p><textarea name="content" placeholder="Commentaire" required></textarea></p>
                                    <div class="comment-btn text-center">
                                        <button class="button" type="submit">Commenter</button>
                                    </div>
                                </form>
                            </div>
                            <!-- // Blog Comment Form -->
                        </div>
                        <!-- // Blog Comments -->

                    </div>
                </div>
                <!-- // Blog Main Content -->
            </div>
        </div>
    </section>
{% endblock %}

{% block js %}
<!-- ====== ALL JS ====== -->
<script src="../public/assets/js/jquery-3.3.1.min.js"></script>
<script src="../public/assets/js/bootstrap.min.js"></script>
<script src="../public/assets/js/lightbox.min.js"></script>
<script src="../public/assets/js/owl.carousel.min.js"></script>
<script src="../public/assets/js/jquery.mixitup.js"></script>
<script src="../public/assets/js/wow.min.js"></script>
<script src="../public/assets/js/typed.js"></script>
<script src="../public/assets/js/main.js"></script>
{% endblock %}