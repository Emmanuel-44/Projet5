<!DOCTYPE html>
<html lang="en">

    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta charset="UTF-8">
        <title>Blog | Safs - HTML</title>

        <!-- ====== Google Fonts ====== -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600" rel="stylesheet">

        {% block css %}
        <!-- ====== ALL CSS ====== -->
        <link rel="stylesheet" href="public/assets/css/bootstrap.min.css">
        <link rel="stylesheet" href="public/assets/css/fontawesome-all.min.css">
        <link rel="stylesheet" href="public/assets/css/lightbox.min.css">
        <link rel="stylesheet" href="public/assets/css/owl.carousel.min.css">
        <link rel="stylesheet" href="public/assets/css/animate.css">
        <link rel="stylesheet" href="public/css/style.css">
        <link rel="stylesheet" href="public/assets/css/responsive.css">
        {% endblock %}
    </head>

    <body data-spy="scroll" data-target=".navbar-nav">

        <!-- ====== Header ====== -->
        <header id="header" class="header">
            <!-- ====== Navbar ====== -->
            <nav class="navbar navbar-expand-lg fixed-top">
                <div class="container">
                    {% block logo %}
                    <!-- Logo -->
                    <a class="navbar-brand logo" href="index.html">
                        <img src="public/assets/images/logo.png" alt="logo">
                    </a>
                    <!-- // Logo -->
                    {% endblock %}

                    <!-- Mobile Menu -->
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-expanded="false"><span><i class="fa fa-bars"></i></span></button>
                    <!-- Mobile Menu -->

                    <div class="collapse navbar-collapse main-menu" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto mr-auto">
                            <li class="nav-item active"><a class="nav-link" href="#home">HOME</a></li>
                            <li class="nav-item"><a class="nav-link" href="#about">ABOUT</a></li>
                            <li class="nav-item"><a class="nav-link" href="#service">SERVICE</a></li>
                            <li class="nav-item"><a class="nav-link" href="#portfolio">PORTFOLIO</a></li>
                            <li class="nav-item"><a class="nav-link" href="blog.html">BLOG</a></li>
                            <li class="nav-item"><a class="nav-link pr0" href="#contact">CONTACT</a></li>
                        </ul>
                        <ul class="navbar-nav ml-auto">
                            {% if session.user is defined and session.user is not empty %}
                                <li class="nav-item"><img src="{{ session.user.imagePath }}" class="avatar-img" alt="Photo de profil"></li>
                                <div class="dropdown">
                                    <button class="btn btn-outline-warning dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Bonjour {{ session.user.username }}</a>
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <p class="dropdown-item">{{ session.user.contactEmail }}</p>
                                        <p class="dropdown-item">Membre depuis le {{ session.user.addingDate | date('d/m/Y') }}</p>
                                        <div class="dropdown-divider">
                                            <a class="dropdown-item" href="../Projet5/logout">Se déconnecter</a>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <li class="nav-item"><a class="nav-link" href="../Projet5/login">Se connecter</a></li>
                                <li class="nav-item"><a class="nav-link" href="../Projet5/creer-un-compte">Créer un compte</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
            {% block image %}{% endblock %}
        </header>


        {% block content %}
        {% endblock %}

        <!-- ====== Footer Area ====== -->
        <footer class="footer-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <div class="copyright-text">
                            <p class="text-white">&copy; 2018 <a href="https://www.begindot.com/">A Template Designed by Begindot</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- ====== // Footer Area ====== -->

        {% block js %}
        <!-- ====== ALL JS ====== -->
        <script src="public/assets/js/jquery-3.3.1.min.js"></script>
        <script src="public/assets/js/bootstrap.min.js"></script>
        <script src="public/assets/js/lightbox.min.js"></script>
        <script src="public/assets/js/owl.carousel.min.js"></script>
        <script src="public/assets/js/jquery.mixitup.js"></script>
        <script src="public/assets/js/wow.min.js"></script>
        <script src="public/assets/js/typed.js"></script>
        <script src="public/assets/js/main.js"></script>
        {% endblock %}

    </body>
</html>